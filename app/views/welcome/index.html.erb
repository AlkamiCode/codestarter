<div class="welcome">
<div id="banner_box">
  <h1 id="welcome">Welcome to</h1>
</div>
</div>

<div id="carousel" class="carousel slide" data-ride="carousel" data-interval="2500" data-wrap="true">
<ol class="carousel-indicators">
    <li data-target="#item-1" data-slide-to="0" class="active"></li>
    <li data-target="#item-2" data-slide-to="1"></li>
    <li data-target="#item-3" data-slide-to="2"></li>
  </ol>

  <div class="carousel-inner">
    <div class="item active">
      <img style="max-height:17em" src=<%= (@items[0].image) %> alt="...">
      <div class="carousel-caption">
          <h3><%= (@items[0].title) %></h3>
      </div>
    </div>
    <div class="item">
      <img style="max-height:17em" src=<%= (@items[1].image) %> alt="...">
      <div class="carousel-caption">
          <h3><%= (@items[1].title) %></h3>
      </div>
    </div>
    <div class="item">
      <img style="max-height:17em" src=<%= (@items[2].image) %> alt="...">
      <div class="carousel-caption">
          <h3><%= (@items[2].title) %></h3>
      </div>
    </div>
  </div>


  <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>
