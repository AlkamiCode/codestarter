<div class="container" id="CartPage">

  <h1 id="CartTitle">Your Shopping Cart</h1>
  <table id="CartTable">
    <th></th>
    <th>Item</th>
    <th>Description</th>
    <th>Price</th>
    <th></th>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td id="ItemImage"><%= image_tag cart_item.image %></td>
      <td id="Title"><%= cart_item.title %></td>
      <td id="Description"><%= cart_item.description %></td>
      <td id="price"><%= number_to_currency(cart_item.price) %></td>
      <td>
        <div class="btn-group" role="group" aria-label="...">
          <button type="button" class="btn btn-default">
            <%= button_to "Remove", cart_item_path(@item), method: :delete %></button>
        </div>
      </td>
    </tr>
    <% end %>
  </table>
<h4>Cart Total: <%= number_to_currency(cart.total) %></h4>
</div>
