<!-- Page Content -->
<div class="container">

    <!-- Page Heading -->
    <div class="row">
        <% @cart_items.each do |item| %>
            <div class="col-lg-12">
                <h1 class="page-header"><%= item.name %>
                    <small>Company Name</small>
                    <small class="pull-right"><%= link_to "Checkout", "#" %></small>
                </h1>
            </div>
        </div>

        <!-- Project -->
        <div class="row">
            <div class="col-md-5">
                <a href="#">
                    <%= image_tag(item.image, class: 'img-responsive') %>
                </a>
            </div>
            <div class="col-md-7">
                <h3><%= item.name %></h3>
                <p><%= item.description %></p>

                <div class="cart-options">

                    <h2 class="pull-left"><%= number_to_currency 34 %></h2>

                    <form class="navbar-form navbar-left" role="search">
                    <button type="submit" class="btn btn-default">Set</button>
                    <input type="text" class="form-control" placeholder="$">
                    </form>

                    <%= link_to "View Project", project_path(item), class: "btn btn-primary" %>
                    <%= link_to "Remove", cart_item_path(item), method: :delete, class: "btn btn-primary" %>
                </div>
            </div>
        <% end %>
    </div>
    <!-- /.row -->

    <hr>
