<div class="container">
  <h1> Order <%= @order.id %> </h1>
  Created on <%= @order.created_at.strftime("%b %d, %Y")%> at <%= @order.created_at.strftime("%I:%M:%S %p")%><br><br>
  <div id="order-info">
    Customer: <%= @order.user.username %><br><br>
    Shipping Address: <%= @order.user.address.street_address %>, <%= @order.user.address.city %>
    <%= @order.user.address.state %>
    <%= @order.user.address.zip %><br><br>
    <ul id="admin_order_items">
      <% @order.order_items.each do |order_item| %>
        <li><h3><%= link_to order_item.item.title, item_path(order_item.item) %><h3></li>
        <li>Quantity: <%= order_item.quantity %></li>
        <li>Price: <%= number_to_currency(order_item.item.price) %></li>
        <li>Subtotal: <%= number_to_currency(order_item.item.price * order_item.quantity) %></li>
      <% end %>
    </ul>

    Total: <%= number_to_currency(@order.total) %>
  </div>
</div>
