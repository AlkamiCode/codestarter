<div class="container" id="AdminOrdersPage">
  <button type="button" class="btn btn-default" id="ordered-filter">Ordered</button>
  <button type="button" class="btn btn-default" id="paid-filter">Paid</button>
  <button type="button" class="btn btn-default" id="cancelled-filter">Cancelled</button>
  <button type="button" class="btn btn-default" id="completed-filter">Completed</button>

  <h1>All Orders</h1>

  <h3>Order Status Summary</h3>
  <ul id="status_summary">
    <% @orders.group_by { |order| order.status }.each do |status, orders| %>
    <li><%= status.capitalize %>: <%= orders.size %></li>
    <% end %>
  </ul>

  <% if @orders.size > 0 %>
  <h3>Orders</h3>
  <table id="admin-orders">
    <thead>
      <tr>
        <th>Customer ID</th>
        <th>Status</th>
        <th>Order Details</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr class="<%= order.status %>">
        <td><%= order.user_id %></td>
        <td><%= order.status %></td>
        <td><%= link_to "View Order", admin_order_path(order) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>

</div>
