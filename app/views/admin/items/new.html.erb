<h3>New Item</h3>

<%= form_for @item, :url => admin_items_path, :html => {method: :post} do |f| %>
<%= f.label :title %>
<%= f.text_field :title %><br>

<%= f.label :price %>
<%= f.text_field :price %><br>

<%= f.label :image, "Attach Image" %>
<%= f.file_field :image %><br>

<%= f.label :description %>
<%= f.text_field :description %><br>

<%= f.label :category %>
<%= f.text_field :category %><br>

<%= f.submit %>

<% end %>
