<div class="container">
  <h3>New Item</h3>

  <%= form_for @item, :url => admin_items_path, :html => {method: :post} do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.label :price %>
    <%= f.text_field :price %><br>

    <%= f.label :image, "Image URL" %>
    <%= f.text_field :image %><br>

    <%= f.label :description %>
    <%= f.text_field :description %><br>

    <%= f.label :category %>
    <%= f.collection_select(:category_id, Category.all, :id, :name) %><br>

    <%= f.submit %>

  <% end %>
</div>
