<div class="container">
  <h3>Edit Item</h3>
  <form class="form-horizontal">
    <div class="form-group">
      <%= form_for @item, :url => admin_item_path(@item) do |f| %>
      <label for="title" class="col-sm-2 control-label">Title</label>
      <div class="col-sm-10" id="entry">
        <%= f.text_field :title %>
      </div>
    </div>
    <div class="form-group">
      <label for="price" class="col-sm-2 control-label">Price</label>
      <div class="col-sm-10" id="entry">
        <%= f.text_field :price %>
      </div>
    </div>
    <div class="form-group">
      <label for="image" class="col-sm-2 control-label">Image URL</label>
      <div class="col-sm-10" id="entry">
        <%= f.text_field :image %>
      </div>
    </div>
    <div class="form-group">
      <label for="description" class="col-sm-2 control-label">Description</label>
      <div class="col-sm-10" id="entry">
        <%= f.text_field :description %>
      </div>
    </div>
    <div class="form-grouop">
      <label for="category" class="col-sm-2 control-label">Category</label>
      <div class="col-sm-10" id="entry">
        <%= f.collection_select(:category_id, Category.all, :id, :name) %><br>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10" id="entry">
        <%= f.submit %>
      </div>
    </div>
  </form>
  <% end %>
</div>
