<div class="container">
  <h2>Explore <%= @projects.count %> active projects</h2>

  <% @projects.each do |project| %>
    <div class="row">
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src= <%= project.image %> alt="...">
          <div class="caption">
            <h3><%= project.name %></h3>
            <p><%= project.description %></p>
            <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">View Project</a></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
