<div class="container">
    <div class="row">

      <div class="col-lg-6">

        <div class="new-project-form">

          <%= form_for [:company, @project] do |f| %>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :description %>
              <%= f.text_area :description, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :funding_goal %>
              <%= f.text_field :funding_goal, class: "form-control" %>
            </div>

            <div class="form-group">
                <label>End Date</label>
                <%= f.datetime_select :end_date, default: 1.day.from_now, prompt: {day: 'Choose day', month: 'Choose month', year: 'Choose year'}, discard_hour: true %>
            </div>
                <%= f.submit "Create", class: "btn btn-primary" %>
            </div>
        <% end %>
      </div>
    </div>
</div>
