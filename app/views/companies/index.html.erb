<div class="container">
  <h2>Fund ambitious projects by these great companies</h2>

  <% @companies.in_groups_of(3, false) do |companies| %>
    <div class="row">
      <% companies.each do |company| %>
        <div class="col-md-4 portfolio-item">
          <div class="thumbnail">
            <img src= <%= company.logo %> alt= <%= company.name %>>
            <div class="caption">
              <h3><%= company.name %></h3>
              <p class="all-companies-description"><%= company.description %></p>
              <%= link_to "View Projects", company_projects_path(company), class: "btn btn-info", role: "button" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
