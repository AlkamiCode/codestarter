<body id="page-top">
<header>
  <div class="header-content">
    <div class="header-content-inner">
        <h1 class="header-title">Your Go To Source For Funding Creative Tech Projects</h1>
        <hr>
        <a href="#portfolio" class="btn btn-primary btn-xl page-scroll">Featured Projects</a>
    </div>
  </div>
</header>

<section class="bg-primary" id="about">
  <div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 text-center">
            <h2 class="section-heading">We've got exactly the platform you need</h2>
            <hr class="light">
            <p class="text-faded">CodeStarter has everything your tech company needs to get registered and start pitching your projects to the world</p>
            <a href="#" class="btn btn-default btn-xl">Get Started!</a>
        </div>
    </div>
  </div>
</section>

<section id="services">
  <div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">At Your Service</h2>
            <hr class="primary">
        </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-6 text-center">
        <div class="service-box">
            <i class="fa fa-4x fa-credit-card wow bounceIn text-primary"></i>
            <h3>Payment Processing</h3>
            <p class="text-muted">Our platform is secure for financial transactions</p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6 text-center">
        <div class="service-box">
            <i class="fa fa-4x fa-mobile-phone wow bounceIn text-primary" data-wow-delay=".1s"></i>
            <h3>Mobile</h3>
            <p class="text-muted">Our platform is super mobile friendly and easy to use</p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6 text-center">
        <div class="service-box">
            <i class="fa fa-4x fa-newspaper-o wow bounceIn text-primary" data-wow-delay=".2s"></i>
            <h3>Up to Date</h3>
            <p class="text-muted">Companies post new projects every day Sign up for our newsletter</p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6 text-center">
        <div class="service-box">
            <i class="fa fa-4x fa-gift wow bounceIn text-primary" data-wow-delay=".3s"></i>
            <h3>Earn Gifts</h3>
            <p class="text-muted">Every project you invest in provides awesome gifts</p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="no-padding" id="portfolio">
  <div class="container-fluid">
    <div class="row no-gutter">
    <% count = 0 %>
    <% @projects.each do |project| %>
      <div class="col-lg-4 col-sm-6">
        <a href="/projects/<%= project.id %>" class="portfolio-box">
          <%= image_tag("#{count +=1}.jpg", class: "img-responsive", alt: "") %>
          <div class="portfolio-box-caption">
            <div class="portfolio-box-caption-content">
              <div class="project-category text-faded">
                  Featured Project
              </div>
              <div class="project-name">
                <%= project.name %>
              </div>
            </div>
          </div>
        </a>
      </div>
    <% end %>
    </div>
  </div>
</section>

<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 text-center">
                <h2 class="section-heading">Let's Get In Touch!</h2>
                <hr class="primary">
                <p>Ready to start your next project with us? That's great! Give us a call or send us an email and we will get back to you as soon as possible!</p>
            </div>
            <div class="col-lg-4 col-lg-offset-2 text-center">
                <i class="fa fa-phone fa-3x wow bounceIn"></i>
                <p>720-Wee-Rock</p>
            </div>
            <div class="col-lg-4 text-center">
                <i class="fa fa-envelope-o fa-3x wow bounceIn" data-wow-delay=".1s"></i>
                <p><a href="mailto:your-email@your-domain.com">feedback@code-starter.com</a></p>
            </div>
        </div>
    </div>
</section>

</body>
